<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage
    x:Class="VBMTablet._pages._thanhtoan.discount_page"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animation="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
    xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms"
    xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:popup="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup">

    <popup:PopupPage.Animation>
        <animation:ScaleAnimation
            DurationIn="400"
            DurationOut="300"
            EasingIn="SinOut"
            EasingOut="SinIn"
            HasBackgroundAnimation="True"
            PositionIn="Center"
            PositionOut="Center" />
    </popup:PopupPage.Animation>

    <StackLayout
        Margin="20,50"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <border:SfBorder
            BackgroundColor="White"
            CornerRadius="50"
            HasShadow="True"
            ShadowColor="WhiteSmoke">

            <Grid Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <ff:CachedImage
                    x:Name="close"
                    Aspect="Fill"
                    HeightRequest="20"
                    HorizontalOptions="End"
                    Source="Close"
                    VerticalOptions="Start"
                    WidthRequest="20">
                    <ff:CachedImage.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ff_close_tapped" />
                    </ff:CachedImage.GestureRecognizers>
                </ff:CachedImage>

                <Label
                    Grid.Row="1"
                    FontSize="26"
                    HorizontalOptions="Center"
                    Text="MÃ GIẢM GIÁ"
                    VerticalOptions="Center" />


                <Grid Grid.Row="2">

                    <StackLayout
                        BindableLayout.ItemsSource="{Binding cartPromoItems}"
                        HorizontalOptions="Center"
                        Orientation="Vertical"
                        Spacing="20"
                        VerticalOptions="Center">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <StackLayout
                                    HorizontalOptions="Center"
                                    Orientation="Horizontal"
                                    Spacing="-20"
                                    VerticalOptions="Center">

                                    <border:SfBorder
                                        Padding="20"
                                        BackgroundColor="{Binding borderColor}"
                                        BorderColor="#C2C2C2"
                                        CornerRadius="30"
                                        HasShadow="False"
                                        HeightRequest="40"
                                        HorizontalOptions="Start"
                                        WidthRequest="433">
                                        <Label
                                            FontSize="22"
                                            HorizontalOptions="Start"
                                            HorizontalTextAlignment="Center"
                                            Text="{Binding name}"
                                            TextColor="{Binding textColor}"
                                            VerticalOptions="Center" />
                                    </border:SfBorder>

                                    <border:SfBorder
                                        BackgroundColor="{Binding borderColor}"
                                        BorderColor="#C2C2C2"
                                        CornerRadius="30"
                                        HasShadow="False"
                                        HeightRequest="40"
                                        HorizontalOptions="End"
                                        WidthRequest="136">
                                        <Label
                                            FontSize="22"
                                            HorizontalOptions="Center"
                                            Text="Dùng"
                                            TextColor="{Binding textColor}"
                                            VerticalOptions="Center" />
                                    </border:SfBorder>
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="stlCartPromo_tapped" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>

                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>

                </Grid>

            </Grid>

        </border:SfBorder>

    </StackLayout>

</popup:PopupPage>