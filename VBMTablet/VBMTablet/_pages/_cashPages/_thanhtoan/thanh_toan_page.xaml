<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="VBMTablet._pages._thanhtoan.thanh_toan_page"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms"
    xmlns:busyindicator="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
    xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:sf="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
    BackgroundColor="{StaticResource vbmwhite}"
    NavigationPage.HasNavigationBar="False">

    <Grid Grid.Row="1" Padding="10,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="340" />
        </Grid.RowDefinitions>

        <Grid
            HeightRequest="40"
            HorizontalOptions="Start"
            VerticalOptions="Center"
            WidthRequest="40">
            <Image
                Aspect="AspectFit"
                BackgroundColor="White"
                HeightRequest="30"
                HorizontalOptions="Start"
                Source="Stroke"
                VerticalOptions="Center" />
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="ff_backicon_tapped" />
            </Grid.GestureRecognizers>
        </Grid>

        <ScrollView Grid.Row="1">

            <StackLayout
                BindableLayout.ItemsSource="{Binding cartItems}"
                HorizontalOptions="Center"
                Orientation="Vertical"
                Spacing="20">

                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <border:SfBorder
                            Margin="0,0,0,20"
                            Padding="0,0,0,15"
                            BackgroundColor="{StaticResource vbmwhite}"
                            BorderColor="WhiteSmoke"
                            BorderWidth="2"
                            CornerRadius="40"
                            HasShadow="False">

                            <Grid RowSpacing="5">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid BackgroundColor="{StaticResource vbmdeepgreen}">

                                    <StackLayout
                                        Margin="20,0"
                                        HorizontalOptions="Start"
                                        Orientation="Horizontal"
                                        Spacing="5"
                                        VerticalOptions="Center">

                                        <Grid
                                            HeightRequest="30"
                                            VerticalOptions="Center"
                                            WidthRequest="30">
                                            <Label
                                                FontSize="20"
                                                Text="×"
                                                TextColor="{StaticResource vbmwhite}"
                                                VerticalOptions="Center" />
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="lbldeletecart_tapped" />
                                            </Grid.GestureRecognizers>
                                        </Grid>

                                        <Label
                                            FontSize="20"
                                            Text="{Binding tonggia}"
                                            TextColor="{StaticResource vbmwhite}"
                                            VerticalOptions="Center" />

                                    </StackLayout>

                                    <Label
                                        Margin="20,0"
                                        FontSize="20"
                                        HorizontalOptions="End"
                                        Text="{Binding orderCode}"
                                        TextColor="{StaticResource vbmwhite}"
                                        VerticalOptions="Center" />

                                </Grid>

                                <StackLayout
                                    Grid.Row="1"
                                    Padding="10,0"
                                    Orientation="Vertical"
                                    Spacing="10">

                                    <Grid ColumnSpacing="10">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid>
                                            <Label
                                                FontAttributes="Bold"
                                                FontSize="20"
                                                Text="{Binding monchinh_name}"
                                                TextColor="{StaticResource vbmgreen}"
                                                VerticalOptions="Center" />
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="brEdit_tapped" />
                                            </Grid.GestureRecognizers>
                                        </Grid>

                                        <border:SfBorder
                                            Grid.Column="1"
                                            Padding="5,0"
                                            BackgroundColor="{StaticResource vbmlightgray}"
                                            BorderColor="Transparent"
                                            CornerRadius="50"
                                            HasShadow="False"
                                            HeightRequest="50"
                                            VerticalOptions="Center">

                                            <StackLayout
                                                HorizontalOptions="Center"
                                                Orientation="Horizontal"
                                                Spacing="20"
                                                VerticalOptions="Center">

                                                <Grid>
                                                    <Label
                                                        FontSize="20"
                                                        HorizontalOptions="Center"
                                                        Text="-"
                                                        TextColor="{StaticResource vbmgray}"
                                                        VerticalOptions="Center" />
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="lbldecreasecartitem_tapped" />
                                                    </Grid.GestureRecognizers>
                                                </Grid>

                                                <Label
                                                    FontSize="20"
                                                    Text="{Binding solg}"
                                                    TextColor="{StaticResource vbmgray}"
                                                    VerticalOptions="Center" />

                                                <Grid>
                                                    <Label
                                                        FontSize="20"
                                                        HorizontalOptions="Center"
                                                        Text="+"
                                                        TextColor="{StaticResource vbmgray}"
                                                        VerticalOptions="Center" />
                                                    <Grid.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="lblincreasecartitem_tapped" />
                                                    </Grid.GestureRecognizers>
                                                </Grid>


                                            </StackLayout>

                                        </border:SfBorder>

                                        <Label
                                            Grid.Column="2"
                                            FontSize="20"
                                            Text="{Binding monchinh_dongia}"
                                            TextColor="{StaticResource vbmgray}"
                                            VerticalOptions="Center" />

                                    </Grid>

                                    <Label
                                        FontSize="15"
                                        Text="{Binding monchinh_giavi}"
                                        TextColor="{StaticResource vbmgray}" />

                                    <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
                                        <StackLayout
                                            BindableLayout.ItemsSource="{Binding monchinh_extrasRender}"
                                            HorizontalOptions="Start"
                                            IsVisible="{Binding visExtra}"
                                            Orientation="Horizontal"
                                            Spacing="15"
                                            VerticalOptions="Center">
                                            <BindableLayout.ItemTemplate>
                                                <DataTemplate>
                                                    <border:SfBorder
                                                        Padding="10,0"
                                                        BackgroundColor="{StaticResource vbmdeeplightgray}"
                                                        BorderColor="Transparent"
                                                        CornerRadius="50"
                                                        HasShadow="False"
                                                        HeightRequest="50">
                                                        <Label
                                                            FontSize="15"
                                                            HorizontalOptions="Center"
                                                            HorizontalTextAlignment="Center"
                                                            Text="{Binding name}"
                                                            TextColor="{StaticResource vbmwhite}"
                                                            VerticalOptions="Center" />
                                                    </border:SfBorder>
                                                </DataTemplate>
                                            </BindableLayout.ItemTemplate>
                                        </StackLayout>
                                    </ScrollView>

                                    <Grid Padding="10,0" IsVisible="{Binding visDrinkCb}">

                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="20"
                                            HorizontalOptions="Start"
                                            Text="{Binding drinkname}"
                                            TextColor="{StaticResource vbmgreen}"
                                            VerticalOptions="Center" />

                                        <Label
                                            FontSize="20"
                                            HorizontalOptions="End"
                                            Text="{Binding drink_dongia}"
                                            TextColor="{StaticResource vbmgray}"
                                            VerticalOptions="Center" />

                                    </Grid>

                                </StackLayout>

                            </Grid>

                        </border:SfBorder>

                    </DataTemplate>
                </BindableLayout.ItemTemplate>

            </StackLayout>

        </ScrollView>

        <Grid Grid.Row="2" RowSpacing="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid ColumnSpacing="20">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <border:SfBorder
                    x:Name="borderwallet"
                    Padding="20,0"
                    BackgroundColor="{StaticResource vbmlightgray}"
                    BorderColor="Transparent"
                    CornerRadius="50"
                    HasShadow="False">

                    <Grid VerticalOptions="Center">

                        <ff:CachedImage
                            x:Name="walleticon"
                            Aspect="AspectFit"
                            HeightRequest="30"
                            HorizontalOptions="Start"
                            Source="walleticon"
                            VerticalOptions="Center" />

                        <Label
                            x:Name="labelwallet"
                            FontAttributes="Bold"
                            FontSize="20"
                            HorizontalOptions="Center"
                            Text="TIỀN MẶT"
                            TextColor="{StaticResource vbmgray}" />

                    </Grid>

                    <border:SfBorder.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ff_thanhtoan_tapped" />
                    </border:SfBorder.GestureRecognizers>

                </border:SfBorder>

                <border:SfBorder
                    x:Name="voucherborder"
                    Grid.Column="1"
                    Padding="20,0"
                    BackgroundColor="{StaticResource vbmlightgray}"
                    BorderColor="Transparent"
                    CornerRadius="50"
                    HasShadow="False">

                    <Grid VerticalOptions="Center">

                        <ff:CachedImage
                            x:Name="vouchericon"
                            Aspect="AspectFit"
                            HeightRequest="30"
                            HorizontalOptions="Start"
                            Source="vouchericon"
                            VerticalOptions="Center" />

                        <Label
                            x:Name="voucherlable"
                            FontAttributes="Bold"
                            FontSize="20"
                            HorizontalTextAlignment="Center"
                            Text="MÃ GIẢM GIÁ"
                            TextColor="{StaticResource vbmgray}" />

                    </Grid>

                    <border:SfBorder.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ff_discount_tapped" />
                    </border:SfBorder.GestureRecognizers>
                </border:SfBorder>

            </Grid>

            <Grid Grid.Row="1" ColumnSpacing="20">

                <Entry
                    ClearButtonVisibility="WhileEditing"
                    FontSize="20"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Center"
                    Placeholder="Mật khẩu"
                    PlaceholderColor="#d2d2d2"
                    TextColor="{StaticResource vbmgreen}"
                    VerticalOptions="Center"
                    WidthRequest="170" />

                <border:SfBorder
                    x:Name="brhoadon"
                    Grid.Column="1"
                    Padding="20,0"
                    BackgroundColor="{StaticResource vbmlightgray}"
                    BorderColor="Transparent"
                    CornerRadius="50"
                    HasShadow="False">

                    <Label
                        x:Name="lblhoadon"
                        FontSize="18"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="HOÁ ĐƠN ĐỎ"
                        TextColor="{StaticResource vbmgray}"
                        VerticalOptions="Center" />

                    <border:SfBorder.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ff_hoadon_tapped" />
                    </border:SfBorder.GestureRecognizers>

                </border:SfBorder>

                <border:SfBorder
                    x:Name="brcombo"
                    Grid.Column="2"
                    Padding="20,0"
                    BackgroundColor="{StaticResource vbmlightgray}"
                    BorderColor="Transparent"
                    CornerRadius="50"
                    HasShadow="False">

                    <Label
                        x:Name="lblcombo"
                        FontSize="18"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="COMBONV"
                        TextColor="{StaticResource vbmgray}"
                        VerticalOptions="Center" />

                    <border:SfBorder.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ff_combo_tapped" />
                    </border:SfBorder.GestureRecognizers>
                </border:SfBorder>

            </Grid>

            <StackLayout
                Grid.Row="2"
                BindableLayout.ItemsSource="{Binding orderOptions}"
                HorizontalOptions="Center"
                Orientation="Horizontal"
                Spacing="20">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <border:SfBorder
                            BackgroundColor="{Binding BorderColor}"
                            BorderColor="Transparent"
                            CornerRadius="50"
                            HasShadow="False"
                            HeightRequest="60"
                            WidthRequest="150">
                            <Label
                                FontSize="18"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="{Binding name}"
                                TextColor="{Binding TextColor}"
                                VerticalOptions="Center" />
                            <border:SfBorder.GestureRecognizers>
                                <TapGestureRecognizer Tapped="orderOption_tapped" />
                            </border:SfBorder.GestureRecognizers>
                        </border:SfBorder>

                    </DataTemplate>
                </BindableLayout.ItemTemplate>



            </StackLayout>

            <StackLayout
                Grid.Row="3"
                Margin="15,0"
                Spacing="10">

                <Grid VerticalOptions="Center">

                    <Label
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Tổng Cộng:"
                        TextColor="{StaticResource vbmgray}"
                        VerticalOptions="Center" />

                    <Label
                        FontSize="20"
                        HorizontalOptions="End"
                        Text="{Binding tongtien}"
                        TextColor="{StaticResource vbmbrick}"
                        VerticalOptions="Center" />

                </Grid>

                <Grid>

                    <Label
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Voucher:"
                        TextColor="{StaticResource vbmgray}"
                        VerticalOptions="Center" />

                    <Label
                        FontSize="20"
                        HorizontalOptions="End"
                        Text="000"
                        TextColor="{StaticResource vbmbrick}"
                        VerticalOptions="Center" />

                </Grid>

                <Grid>

                    <Label
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Giảm giá:"
                        TextColor="{StaticResource vbmgray}"
                        VerticalOptions="Center" />

                    <Label
                        FontSize="20"
                        HorizontalOptions="End"
                        Text="{Binding giamgia}"
                        TextColor="{StaticResource vbmbrick}"
                        VerticalOptions="Center" />

                </Grid>

                <Grid>

                    <Label
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Thành tiền:"
                        TextColor="{StaticResource vbmgray}"
                        VerticalOptions="Center" />

                    <Label
                        FontSize="20"
                        HorizontalOptions="End"
                        Text="{Binding thanhtien}"
                        TextColor="{StaticResource vbmbrick}"
                        VerticalOptions="Center" />

                </Grid>

            </StackLayout>

        </Grid>

    </Grid>

</ContentPage>